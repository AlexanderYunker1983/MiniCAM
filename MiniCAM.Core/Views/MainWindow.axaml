<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MiniCAM.Core.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:MiniCAM.Core.Views" 
        xmlns:main="clr-namespace:MiniCAM.Core.ViewModels.Main"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MiniCAM.Core.Views.MainWindow"
        x:DataType="main:MainViewModel"
        Icon="/Assets/CNC.ico"
        WindowStartupLocation="CenterScreen">
  <DockPanel>
    <Menu DockPanel.Dock="Top"
          FontSize="12">
      <MenuItem Header="{Binding MenuSettingsText}">
        <MenuItem Header="{Binding MenuApplicationSettingsText}"
                  Command="{Binding OpenApplicationSettingsCommand}" />
        <MenuItem Header="{Binding MenuCodeGenerationSettingsText}"
                  Command="{Binding OpenCodeGenerationSettingsCommand}" />
      </MenuItem>
    </Menu>

    <views:MainView />
  </DockPanel>
</Window>
