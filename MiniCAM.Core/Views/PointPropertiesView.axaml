<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MiniCAM.Core.ViewModels.Main"
             x:Class="MiniCAM.Core.Views.PointPropertiesView"
             x:DataType="vm:PointPropertiesViewModel"
             mc:Ignorable="d">
  <StackPanel Spacing="12" Margin="8">
    <!-- X Coordinate -->
    <StackPanel Spacing="4">
      <TextBlock Text="{Binding XLabelText}" FontWeight="SemiBold" />
      <TextBox Text="{Binding X, StringFormat='{}{0:F3}', Mode=TwoWay}"
               HorizontalAlignment="Stretch" />
    </StackPanel>

    <!-- Y Coordinate -->
    <StackPanel Spacing="4">
      <TextBlock Text="{Binding YLabelText}" FontWeight="SemiBold" />
      <TextBox Text="{Binding Y, StringFormat='{}{0:F3}', Mode=TwoWay}"
               HorizontalAlignment="Stretch" />
    </StackPanel>
  </StackPanel>
</UserControl>
