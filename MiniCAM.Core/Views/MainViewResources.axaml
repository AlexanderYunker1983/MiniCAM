<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">
  <Thickness x:Key="RibbonTabHeaderPadding">8 4</Thickness>
  <CornerRadius x:Key="RibbonTabHeaderCornerRadius">8,8,0,0</CornerRadius>
  <system:Double x:Key="RibbonTabHeaderFontSize">14</system:Double>

  <!-- Style parameters for buttons inside the Ribbon TabControl -->
  <system:Double x:Key="RibbonButtonWidth">100</system:Double>
  <system:Double x:Key="RibbonButtonHeight">100</system:Double>
  <CornerRadius x:Key="RibbonButtonCornerRadius">4</CornerRadius>
</ResourceDictionary>


