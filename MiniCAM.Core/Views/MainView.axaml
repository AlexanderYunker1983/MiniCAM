<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MiniCAM.Core.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MiniCAM.Core.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://MiniCAM.Core/Views/MainViewResources.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <UserControl.Styles>
    <StyleInclude Source="avares://MiniCAM.Core/Views/MainViewStyles.axaml" />
  </UserControl.Styles>

  <DockPanel>
    <Border DockPanel.Dock="Top"
            Background="{DynamicResource RibbonBackgroundBrush}"
            BorderBrush="{DynamicResource RibbonBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="8 4">
      <TabControl Classes="RibbonTabs"
                  DoubleTapped="RibbonTabs_OnDoubleTapped">
        <!-- Drilling operations tab -->
        <TabItem>
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabDrillingText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="TEST" />
              <Button Content="TEST" />
            </StackPanel>
          </Border>
        </TabItem>
        <!-- Pocket operations tab -->
        <TabItem>
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabPocketText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="TEST" />
              <Button Content="TEST" />
            </StackPanel>
          </Border>
        </TabItem>
        <!-- Profile operations tab -->
        <TabItem>
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabProfileText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="TEST" />
              <Button Content="TEST" />
            </StackPanel>
          </Border>
        </TabItem>
        <!-- Other operations tab -->
        <TabItem>
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabOtherText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="TEST" />
              <Button Content="TEST" />
            </StackPanel>
          </Border>
        </TabItem>
      </TabControl>
    </Border>

    
    <Grid />
  </DockPanel>
</UserControl>
