<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MiniCAM.Core.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MiniCAM.Core.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://MiniCAM.Core/Views/MainViewResources.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <UserControl.Styles>
    <StyleInclude Source="avares://MiniCAM.Core/Views/MainViewStyles.axaml" />
  </UserControl.Styles>

  <DockPanel>
    <Border DockPanel.Dock="Top"
            Background="{DynamicResource RibbonBackgroundBrush}"
            BorderBrush="{DynamicResource RibbonBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="8 4">
      <TabControl Classes="RibbonTabs"
                  DoubleTapped="RibbonTabs_OnDoubleTapped">
        <!-- Drilling operations tab -->
        <TabItem>
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabDrillingText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="TEST" />
              <Button Content="TEST" />
            </StackPanel>
          </Border>
        </TabItem>
        <!-- Pocket operations tab -->
        <TabItem IsEnabled="False">
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabPocketText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="TEST" />
              <Button Content="TEST" />
            </StackPanel>
          </Border>
        </TabItem>
        <!-- Profile operations tab -->
        <TabItem IsEnabled="False">
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabProfileText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="TEST" />
              <Button Content="TEST" />
            </StackPanel>
          </Border>
        </TabItem>
        <!-- Other operations tab -->
        <TabItem IsEnabled="False">
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabOtherText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="TEST" />
              <Button Content="TEST" />
            </StackPanel>
          </Border>
        </TabItem>
      </TabControl>
    </Border>

    <!-- Main area under the ribbon -->
    <Grid>
      <Grid.ColumnDefinitions>
        <!-- Left: operation properties -->
        <ColumnDefinition Width="2*" MinWidth="150" />
        <!-- Splitter between left and center -->
        <ColumnDefinition Width="Auto" />
        <!-- Center: 2D preview -->
        <ColumnDefinition Width="3*" MinWidth="200" />
        <!-- Splitter between center and right -->
        <ColumnDefinition Width="Auto" />
        <!-- Right: operations list / G-code -->
        <ColumnDefinition Width="2*" MinWidth="200" />
      </Grid.ColumnDefinitions>

      <!-- Left column: Operation properties -->
      <Border Grid.Column="0"
              Margin="4"
              Padding="8"
              BorderThickness="1"
              BorderBrush="{DynamicResource ThemeBorderLowBrush}">
        <TextBlock Text="{Binding OperationPropertiesText}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
      </Border>

      <!-- Splitter between left and center -->
      <GridSplitter Grid.Column="1"
                    Width="2"
                    Background="{DynamicResource GridSplitterBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ResizeDirection="Columns"
                    ShowsPreview="True" />

      <!-- Center column: 2D preview -->
      <Border Grid.Column="2"
              Margin="4"
              Padding="8"
              BorderThickness="1"
              BorderBrush="{DynamicResource ThemeBorderLowBrush}">
        <TextBlock Text="{Binding Preview2DText}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
      </Border>

      <!-- Splitter between center and right -->
      <GridSplitter Grid.Column="3"
                    Width="2"
                    Background="{DynamicResource GridSplitterBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ResizeDirection="Columns"
                    ShowsPreview="True" />

      <!-- Right column: TabControl with operations list and G-code -->
      <Border Grid.Column="4"
              Margin="4"
              Padding="0">
        <TabControl>
          <TabItem Header="{Binding OperationsListText}">
            <Border BorderThickness="1"
                    BorderBrush="{DynamicResource TabContentBorderBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="-11,0,0,0">
              <Grid RowDefinitions="Auto,*">
                <!-- Toolbar with buttons -->
                <Border Grid.Row="0"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{DynamicResource TabContentBorderBrush}"
                        Padding="4">
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button Command="{Binding MoveOperationUpCommand}"
                            Width="32"
                            Height="32"
                            Padding="0">
                      <TextBlock Text="â†‘"
                                 FontSize="16"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </Button>
                    <Button Command="{Binding MoveOperationDownCommand}"
                            Width="32"
                            Height="32"
                            Padding="0">
                      <TextBlock Text="â†“"
                                 FontSize="16"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </Button>
                    <Button Command="{Binding DeleteOperationCommand}"
                            Width="32"
                            Height="32"
                            Padding="0">
                      <TextBlock Text="ðŸ—‘"
                                 FontSize="16"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </Button>
                  </StackPanel>
                </Border>
                
                <!-- Operations list -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Operations}"
                         SelectedItem="{Binding SelectedOperation, Mode=TwoWay}">
                  <ListBox.ItemTemplate>
                    <DataTemplate>
                      <Grid ColumnDefinitions="Auto,*"
                            Margin="4,2">
                        <CheckBox Grid.Column="0"
                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}"
                                   VerticalAlignment="Center" />
                      </Grid>
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>
              </Grid>
            </Border>
          </TabItem>
          <TabItem Header="{Binding GCodeText}">
            <Border BorderThickness="1"
                    BorderBrush="{DynamicResource TabContentBorderBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="-11,0,0,0">
              <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
                <TextBlock Text="{Binding GCodeText}"
                           Margin="4" />
              </ScrollViewer>
            </Border>
          </TabItem>
        </TabControl>
      </Border>
    </Grid>
  </DockPanel>
</UserControl>
