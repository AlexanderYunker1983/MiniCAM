<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MiniCAM.Core.ViewModels"
             xmlns:views="clr-namespace:MiniCAM.Core.Views"
             xmlns:main="clr-namespace:MiniCAM.Core.ViewModels.Main"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MiniCAM.Core.Views.MainView"
             x:DataType="main:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <main:MainViewModel />
  </Design.DataContext>

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://MiniCAM.Core/Views/MainViewResources.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <UserControl.Styles>
    <StyleInclude Source="avares://MiniCAM.Core/Views/MainViewStyles.axaml" />
  </UserControl.Styles>

  <DockPanel>
    <Border DockPanel.Dock="Top"
            Background="{DynamicResource RibbonBackgroundBrush}"
            BorderBrush="{DynamicResource RibbonBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="8 4">
      <TabControl Classes="RibbonTabs"
                  DoubleTapped="RibbonTabs_OnDoubleTapped">
        <!-- Drilling operations tab -->
        <TabItem>
          <TabItem.Header>
            <TextBlock Text="{Binding RibbonTabDrillingText}"
                       FontSize="{StaticResource RibbonTabHeaderFontSize}" />
          </TabItem.Header>
          <Border Classes="RibbonTabContent"
                  IsVisible="{Binding IsRibbonContentVisible}">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <ToggleButton Content="{Binding PointButtonText}"
                           IsChecked="{Binding IsPointModeActive, Mode=TwoWay}" />
              <ToggleButton Content="{Binding LineButtonText}"
                           IsChecked="{Binding IsLineModeActive, Mode=TwoWay}" />
              <ToggleButton Content="{Binding EllipseButtonText}"
                           IsChecked="{Binding IsEllipseModeActive, Mode=TwoWay}" />
            </StackPanel>
          </Border>
        </TabItem>
      </TabControl>
    </Border>

    <!-- Main area under the ribbon -->
    <Grid>
      <Grid.ColumnDefinitions>
        <!-- Left: operation properties -->
        <ColumnDefinition Width="{Binding LeftPanelWidth}" />
        <!-- Splitter between left and center -->
        <ColumnDefinition Width="{Binding LeftSplitterWidth}" />
        <!-- Center: 2D preview -->
        <ColumnDefinition Width="3*" MinWidth="200" />
        <!-- Splitter between center and right -->
        <ColumnDefinition Width="{Binding RightSplitterWidth}" />
        <!-- Right: operations list / G-code -->
        <ColumnDefinition Width="{Binding RightPanelWidth}" />
      </Grid.ColumnDefinitions>

      <!-- Left column: Operation properties / Primitive properties -->
      <Border Grid.Column="0"
              Margin="4"
              Padding="0"
              BorderThickness="1"
              BorderBrush="{DynamicResource ThemeBorderLowBrush}"
              IsVisible="{Binding IsLeftPanelVisible}">
        <Grid>
          <!-- Show point properties when point mode is active or point is selected -->
          <ContentControl Content="{Binding PointPropertiesViewModel}"
                         IsVisible="{Binding IsPointPropertiesVisible}">
            <ContentControl.ContentTemplate>
              <DataTemplate>
                <views:PointPropertiesView />
              </DataTemplate>
            </ContentControl.ContentTemplate>
          </ContentControl>
          
          <!-- Show line properties when line is selected -->
          <ContentControl Content="{Binding LinePropertiesViewModel}"
                         IsVisible="{Binding IsLinePropertiesVisible}">
            <ContentControl.ContentTemplate>
              <DataTemplate>
                <views:LinePropertiesView />
              </DataTemplate>
            </ContentControl.ContentTemplate>
          </ContentControl>
          
          <!-- Show ellipse properties when ellipse is selected -->
          <ContentControl Content="{Binding EllipsePropertiesViewModel}"
                         IsVisible="{Binding IsEllipsePropertiesVisible}">
            <ContentControl.ContentTemplate>
              <DataTemplate>
                <views:EllipsePropertiesView />
              </DataTemplate>
            </ContentControl.ContentTemplate>
          </ContentControl>
          
          <!-- Show default text when not showing any properties -->
          <TextBlock Text="{Binding OperationPropertiesText}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="8"
                     IsVisible="{Binding IsAnyPrimitivePropertiesVisible, Converter={x:Static BoolConverters.Not}}" />
        </Grid>
      </Border>

      <!-- Splitter between left and center -->
      <GridSplitter Grid.Column="1"
                    Width="2"
                    Background="{DynamicResource GridSplitterBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ResizeDirection="Columns"
                    ShowsPreview="True"
                    IsVisible="{Binding IsLeftPanelVisible}" />

      <!-- Center column: 2D preview -->
      <Border Grid.Column="2"
              Margin="4"
              Padding="0"
              BorderThickness="1"
              BorderBrush="{DynamicResource ThemeBorderLowBrush}">
        <Grid>
          <views:Preview2DView DataContext="{Binding Preview2DViewModel}"
                               x:Name="Preview2DViewControl" />
          
          <!-- Overlay buttons on top of 2D preview -->
          <Grid>
            <!-- Left button: controls left panel -->
            <Button Classes="CircularOverlayButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0, 8,0,0"
                    ZIndex="100"
                    Command="{Binding ToggleLeftPanelCommand}">
              <TextBlock Text="{Binding LeftButtonContent}"
                         FontSize="16"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" />
            </Button>
            
            <!-- Right button: controls right panel -->
            <Button Classes="CircularOverlayButton"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,8,0,0"
                    ZIndex="100"
                    Command="{Binding ToggleRightPanelCommand}">
              <TextBlock Text="{Binding RightButtonContent}"
                         FontSize="16"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" />
            </Button>
            
            <!-- Center panel: grid snap button and step selector -->
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,8,0,0"
                    ZIndex="100"
                    Background="{DynamicResource ThemeControlBackgroundBrush}"
                    Opacity="0.8"
                    BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="0">
              <StackPanel Orientation="Horizontal" Spacing="0">
                <ToggleButton Content="{Binding GridSnapButtonText}"
                             IsChecked="{Binding IsGridSnapEnabled, Mode=TwoWay}"
                             Padding="8,4"
                             BorderThickness="1,0,0,0"
                             BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                             CornerRadius="4,0,0,4" />
                <ComboBox ItemsSource="{Binding GridSnapSteps}"
                         SelectedItem="{Binding GridSnapStep, Mode=TwoWay}"
                         MinWidth="80"
                         Padding="4,4"
                         BorderThickness="0,0,1,0"
                         BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                         CornerRadius="0" />
                <ToggleButton Content="{Binding ObjectSnapButtonText}"
                             IsChecked="{Binding IsObjectSnapEnabled, Mode=TwoWay}"
                             Padding="8,4"
                             BorderThickness="0"
                             CornerRadius="0,4,4,0" />
              </StackPanel>
            </Border>
          </Grid>
        </Grid>
      </Border>

      <!-- Splitter between center and right -->
      <GridSplitter Grid.Column="3"
                    Width="2"
                    Background="{DynamicResource GridSplitterBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ResizeDirection="Columns"
                    ShowsPreview="True"
                    IsVisible="{Binding IsRightPanelVisible}" />

      <!-- Right column: TabControl with operations list and G-code -->
      <Border Grid.Column="4"
              Margin="4"
              Padding="0"
              IsVisible="{Binding IsRightPanelVisible}">
        <TabControl>
          <TabItem Header="{Binding OperationsListText}">
            <Border BorderThickness="1"
                    BorderBrush="{DynamicResource TabContentBorderBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="-11,0,0,0">
              <Grid RowDefinitions="Auto,*">
                <!-- Toolbar with buttons -->
                <Border Grid.Row="0"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{DynamicResource TabContentBorderBrush}"
                        Padding="4">
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button Command="{Binding MoveOperationUpCommand}"
                            Width="32"
                            Height="32"
                            Padding="0">
                      <TextBlock Text="â†‘"
                                 FontSize="16"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </Button>
                    <Button Command="{Binding MoveOperationDownCommand}"
                            Width="32"
                            Height="32"
                            Padding="0">
                      <TextBlock Text="â†“"
                                 FontSize="16"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </Button>
                    <Button Command="{Binding DeleteOperationCommand}"
                            Width="32"
                            Height="32"
                            Padding="0">
                      <TextBlock Text="ðŸ—‘"
                                 FontSize="16"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </Button>
                  </StackPanel>
                </Border>
                
                <!-- Operations list -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Operations}"
                         SelectedItem="{Binding SelectedOperation, Mode=TwoWay}">
                  <ListBox.ItemTemplate>
                    <DataTemplate>
                      <Grid ColumnDefinitions="Auto,*"
                            Margin="4,2">
                        <CheckBox Grid.Column="0"
                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}"
                                   VerticalAlignment="Center" />
                      </Grid>
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>
              </Grid>
            </Border>
          </TabItem>
          <TabItem Header="{Binding Primitives2DText}">
            <views:Primitives2DView DataContext="{Binding Primitives2DViewModel}" 
                                    Margin="-11,0,0,0"/>
          </TabItem>
          <TabItem Header="{Binding GCodeText}">
            <Border BorderThickness="1"
                    BorderBrush="{DynamicResource TabContentBorderBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="-11,0,0,0">
              <Grid RowDefinitions="Auto,*">
                <!-- Toolbar with buttons -->
                <Border Grid.Row="0"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{DynamicResource TabContentBorderBrush}"
                        Padding="4">
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button Command="{Binding GenerateGCodeCommand}"
                            Content="{Binding GenerateButtonText}"
                            Padding="8,4" />
                    <Button Command="{Binding SaveGCodeCommand}"
                            Content="{Binding SaveButtonText}"
                            Padding="8,4" />
                  </StackPanel>
                </Border>
                
                <!-- G-code lines list -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding GCodeLines}"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                  <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                      <Setter Property="MinHeight" Value="18" />
                      <Setter Property="Padding" Value="0" />
                    </Style>
                  </ListBox.Styles>
                  <ListBox.ItemTemplate>
                    <DataTemplate>
                      <TextBlock Text="{Binding}"
                                 FontFamily="Consolas, Courier New, monospace"
                                 Margin="4,1"
                                 VerticalAlignment="Center" />
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>
              </Grid>
            </Border>
          </TabItem>
        </TabControl>
      </Border>
    </Grid>
  </DockPanel>
</UserControl>
